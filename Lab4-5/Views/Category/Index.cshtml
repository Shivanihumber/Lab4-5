@model IEnumerable<Lab4_5.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h1>CATEGORIES</h1>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { CategoryId = item.CategoryId }) |
            @Html.ActionLink("Detail", "Detail", new { CategoryId = item.CategoryId }) |
         

            @Html.ActionLink("Delete", "Delete", new { CategoryId = item.CategoryId })
        </td>
    </tr>
}

</table>
